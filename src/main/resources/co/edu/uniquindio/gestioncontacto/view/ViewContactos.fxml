<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.gestioncontacto.controller.GestionContactoController"
      prefHeight="400.0" prefWidth="600.0"
      style="-fx-background-color: #2F4156; -fx-font-family: 'Georgia';">

    <children>

        <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="380.0" spacing="15.0"
              style="-fx-background-color: #C8D9E6; -fx-border-color: #cccccc; -fx-border-width: 0 1 0 0;">
            <padding><Insets top="20.0" left="20.0" right="20.0" bottom="20.0" /></padding>

            <Label text="Contacto" style="-fx-font-size: 28px; -fx-text-fill: #2c3e50;" />

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <children>
                    <Label text="Nombre" GridPane.rowIndex="0" />
                    <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="Apellido" GridPane.rowIndex="1" />
                    <TextField fx:id="txtApellido" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                    <Label text="Teléfono" GridPane.rowIndex="2" />
                    <TextField fx:id="txtTelefono" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                    <Label text="Correo" GridPane.rowIndex="3" />
                    <TextField fx:id="txtCorreo" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                    <Label text="Cumpleaños" GridPane.rowIndex="4" />
                    <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.rowIndex="4" GridPane.columnIndex="1">
                        <TextField fx:id="txtDia" promptText="Día" prefWidth="60.0" />
                        <TextField fx:id="txtMes" promptText="Mes" prefWidth="60.0" />
                    </HBox>

                    <Label text="Foto de Perfil" GridPane.rowIndex="5" />
                    <HBox spacing="10.0" alignment="CENTER_LEFT" GridPane.rowIndex="5" GridPane.columnIndex="1">
                        <Button fx:id="btnFotoPerfil" text="Foto" onAction="#handleBtnAgregarFoto" style="-fx-background-color: #f5EFEB; -fx-text-fill: #2c3e50; -fx-font-size: 11pt; -fx-background-radius: 6px; -fx-border-color: #d5d5c0; -fx-border-radius: 6px;"/>
                        <ImageView fx:id="imgFotoPerfil" fitWidth="56.0" fitHeight="56.0" style="-fx-effect: dropshadow(gaussian, gray, 3, 0.5, 0, 0);" />
                    </HBox>
                </children>
            </GridPane>

            <HBox alignment="CENTER" spacing="15.0">
                <Button fx:id="btnActualizar" text="Actualizar" onAction="#handleBtnActualizar" style="-fx-background-color: #f5EFEB; -fx-text-fill: #2c3e50; -fx-font-size: 11pt; -fx-background-radius: 6px; -fx-border-color: #d5d5c0; -fx-border-radius: 6px;"/>
                <Button fx:id="btnRegistrar" text="Registrar" onAction="#handleBtnRegistrar" style="-fx-background-color: #f5EFEB; -fx-text-fill: #2c3e50; -fx-font-size: 11pt; -fx-background-radius: 6px; -fx-border-color: #d5d5c0; -fx-border-radius: 6px;"/>
                <Button fx:id="btnEliminiar" text="Eliminar" onAction="#handleBtnEliminar" style="-fx-background-color: #f5EFEB; -fx-text-fill: #2c3e50; -fx-font-size: 11pt; -fx-background-radius: 6px; -fx-border-color: #d5d5c0; -fx-border-radius: 6px;" />
            </HBox>
        </VBox>

        <!-- Panel Derecho -->
        <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="420.0" spacing="15.0">
            <padding><Insets top="20.0" left="20.0" right="20.0" bottom="20.0" /></padding>

            <HBox spacing="20.0" alignment="CENTER">
                <VBox spacing="10.0" alignment="CENTER_LEFT">
                    <ComboBox fx:id="choiseTipoBusquedaContacto" prefWidth="150.0" promptText="Tipo filtro" style="-fx-background-color: #f5EFEB; -fx-text-fill: #2c3e50; -fx-font-size: 11pt; -fx-background-radius: 6px; -fx-border-color: #d5d5c0; -fx-border-radius: 6px;"/>
                    <TextField fx:id="txtFiltro" promptText="Filtro" />
                    <Button fx:id="btnFiltrar" text="Filtrar" onAction="#handleBtnFiltrar" style="-fx-background-color: #f5EFEB; -fx-text-fill: #2c3e50; -fx-font-size: 11pt; -fx-background-radius: 6px; -fx-border-color: #d5d5c0; -fx-border-radius: 6px;"/>
                </VBox>
                <VBox spacing="10.0" alignment="CENTER_LEFT">
                    <TextField fx:id="txtBusquedaPorNombre" promptText="Buscar por nombre" />
                    <Button fx:id="btnBuscar" text="Buscar" onAction="#handleBtnBuscar" style="-fx-background-color: #f5EFEB; -fx-text-fill: #2c3e50; -fx-font-size: 11pt; -fx-background-radius: 6px; -fx-border-color: #d5d5c0; -fx-border-radius: 6px;"/>
                </VBox>
            </HBox>

            <TableView fx:id="tblListContactos" prefHeight="280.0">
                <columns>
                    <TableColumn fx:id="tbcNombre" text="Nombre" />
                    <TableColumn fx:id="tbcApellido" text="Apellido" />
                    <TableColumn fx:id="tbcTelefono" text="Teléfono" />
                    <TableColumn fx:id="tbcCorreo" text="Correo" />
                    <TableColumn fx:id="tbcCumple" text="Cumpleaños" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <Button fx:id="btnLimpiarCampos" text="Limpiar campos" onAction="#handleBtnLimpiarCampos" style="-fx-background-color: #f5EFEB; -fx-text-fill: #2c3e50; -fx-font-size: 11pt; -fx-background-radius: 6px; -fx-border-color: #d5d5c0; -fx-border-radius: 6px;"/>
        </VBox>
    </children>
</HBox>
